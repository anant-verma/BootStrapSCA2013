@model int
@{
    if(Model > 0)
    {
        @Html.ActionLink("Cart(" + Model + ")", "Cart", "ShoppingCart", routeValues: new { area = "ShoppingCart" }, htmlAttributes: new { @class = "modal-link btn btn-success", title = "Cart" })
    }
    else
    {
        @Html.ActionLink("Cart", "Cart", "ShoppingCart", routeValues: new { area = "ShoppingCart" }, htmlAttributes: new { @class = "modal-link btn btn-success", title = "Cart" })
    }
}

